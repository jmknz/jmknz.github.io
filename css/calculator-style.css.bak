html, body {
  height: 100%;
  width: 100%;
}

#title {
  padding: 0;
  width: 350px;
}

#entry {
  margin: 5px;
}

#history {
  margin: 5px;
}

.calculator {
  width: 325px;
  margin-top: 10%;
  margin-left: auto;
  margin-right: auto;
}

.keypad {
  width: 350px;
  text-align: center;
}

.button {
  float: left;
  width: 66px;
  margin: 2px;
}

.output {
  text-align: right;
  width: 350px;
  height: 65px;
  background-color: red;
  border-radius: 6px;
  margin-bottom: 10px;
}
